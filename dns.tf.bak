provider "dnsimple" {
  token = "var.dnsimple_token}"
  account = "var.dnsimple_account}"
}

resource "dnsimple_record" "web" {
  count = "${aws_instance.web.count}"
  domain = "jdp.io"
  name   = "ops-ooc-web-${count.index+1}"
  value  = "${element(aws_instance.web.*.public_ip, count.index)}"
  type   = "A"
  ttl    = 3600
}
